<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:angle="270"
                android:centerColor="#7c7c7c"
                android:centerY="0.75"
                android:endColor="#adadad"
                android:startColor="#c7c7c7" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <gradient
                    android:angle="270"
                    android:centerColor="#26A974"
                    android:centerY="0.75"
                    android:endColor="#26A974"
                    android:startColor="#26A974" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:angle="270"
                    android:centerColor="#26A974"
                    android:centerY="0.75"
                    android:endColor="#26A974"
                    android:startColor="#26A974" />
            </shape>
        </clip>
    </item>
</layer-list>